<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:textColor="@color/purple_200"
        android:layout_marginTop="16dp"
        android:text="Seu IMC é:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        tools:text="27"/>

    <TextView
        android:id="@+id/textview_Classificacao"
        tools:text="Classificação: Abaixo do peso"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="16dp"
        android:text="VEJA A TABELA ABAIXO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:text="Menor que 18,5 - Abaixo do peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:text="De 18,5 a 24,9 - Peso normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:text="De 25 a 29,9 - Sobrepeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:text="De 30 a 34,9 - Obesidade grau I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:text="De 35 a 39.9 - Obesidade grau II"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:text="Igual ou maior que 40 - Obesidade grau III"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>